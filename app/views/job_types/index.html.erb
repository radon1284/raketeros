<h1>Listing job_types</h1>

<table>
  <thead>
    <tr>
      <th>Type of jobs</th>
      <th>Job post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_types.each do |job_type| %>
      <tr>
        <td><%= job_type.type_of_jobs %></td>
        <td><%= job_type.job_post %></td>
        <td><%= link_to 'Show', job_type %></td>
        <td><%= link_to 'Edit', edit_job_type_path(job_type) %></td>
        <td><%= link_to 'Destroy', job_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

