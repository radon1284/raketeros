<%- model_class = JobPost -%>
<div class="page-header">
  <h1><%=t '.title', :default => JobPost %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:company_name) %></dt>
      <dd><pre class="prettyprint"><%= @job_post.company_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:job_title) %></dt>
      <dd><pre class="prettyprint"><%= @job_post.job_title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:salary) %></dt>
      <dd><pre class="prettyprint"><%= @job_post.salary %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @job_post.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:job_description) %></dt>
      <dd><pre class="prettyprint"><%= @job_post.job_description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:job_benefits) %></dt>
      <dd><pre class="prettyprint"><%= @job_post.job_benefits %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:contact_email) %></dt>
      <dd><pre class="prettyprint"><%= @job_post.contact_email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:website) %></dt>
      <dd><pre class="prettyprint"><%= @job_post.website %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone) %></dt>
      <dd><pre class="prettyprint"><%= @job_post.phone %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              job_posts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_job_post_path(@job_post), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              job_post_path(@job_post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

