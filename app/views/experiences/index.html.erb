<h1>Listing experiences</h1>

<table>
  <thead>
    <tr>
      <th>Work position</th>
      <th>Company name</th>
      <th>Date started</th>
      <th>Date ended</th>
      <th>Time in service</th>
      <th>Profile</th>
      <th>Company description</th>
      <th>Company image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.work_position %></td>
        <td><%= experience.company_name %></td>
        <td><%= experience.date_started %></td>
        <td><%= experience.date_ended %></td>
        <td><%= experience.time_in_service %></td>
        <td><%= experience.profile %></td>
        <td><%= experience.company_description %></td>
        <td><%= experience.company_image %></td>
        <td><%= link_to 'Show', experience %></td>
        <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
        <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Experience', new_experience_path %>
