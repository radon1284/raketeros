<%- model_class = JobPost -%>
<div class="page-header">
  <h1><%=t '.title', :default => JobPost %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:company_name) %></th>
      <th><%= model_class.human_attribute_name(:job_title) %></th>
      <th><%= model_class.human_attribute_name(:salary) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:job_description) %></th>
      <th><%= model_class.human_attribute_name(:job_benefits) %></th>
      <th><%= model_class.human_attribute_name(:contact_email) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @job_posts.each do |job_post| %>
      <tr>
        <td><%= job_post.id %></td>
        <td><%= job_post.company_name %></td>
        <td><%= job_post.job_title %></td>
        <td><%= job_post.salary %></td>
        <td><%= job_post.location %></td>
        <td><%= job_post.job_description %></td>
        <td><%= job_post.job_benefits %></td>
        <td><%= job_post.contact_email %></td>
        <td><%= job_post.website %></td>
        <td><%= job_post.phone %></td>
        <td><%=l job_post.created_at, format: :long %></td>
        <td>
          <%= link_to job_post_path(job_post), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to job_post_path(job_post), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_job_post_path,
            :class => 'btn btn-primary' %>
