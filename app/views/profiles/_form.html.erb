<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :position %>
    <%= f.input :summary %>
    <%= f.input :mobile_phone %>
    <%= f.input :telephone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
