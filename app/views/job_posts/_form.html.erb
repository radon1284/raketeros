<%= simple_form_for(@job_post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_name %>
    <%= f.input :job_title %>
    <%= f.input :salary %>
    <%= f.input :location %>
    <%= f.input :job_description %>
    <%= f.input :job_benefits %>
    <%= f.input :contact_email %>
    <%= f.input :website %>
    <%= f.input :phone %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
