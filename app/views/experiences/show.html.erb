<%- model_class = Experience -%>
<div class="page-header">
  <h1><%=t '.title', :default => Experience %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:work_position) %></dt>
      <dd><pre class="prettyprint"><%= @experience.work_position %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:company_name) %></dt>
      <dd><pre class="prettyprint"><%= @experience.company_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date_started) %></dt>
      <dd><pre class="prettyprint"><%= @experience.date_started %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date_ended) %></dt>
      <dd><pre class="prettyprint"><%= @experience.date_ended %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:time_in_service) %></dt>
      <dd><pre class="prettyprint"><%= @experience.time_in_service %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:company_description) %></dt>
      <dd><pre class="prettyprint"><%= @experience.company_description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:company_image) %></dt>
      <dd><pre class="prettyprint"><%= @experience.company_image %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              experiences_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_experience_path(@experience), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              experience_path(@experience),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

