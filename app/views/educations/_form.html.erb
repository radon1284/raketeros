<%= form_for @education, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :school_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :school_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :course, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :course, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :field_of_study, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :field_of_study, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year_graduated, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :year_graduated, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  educations_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
